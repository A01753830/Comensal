<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="414dp"
                    android:layout_height="733dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout"
                        android:layout_width="420dp"
                        android:layout_height="304dp"
                        android:background="@drawable/top_background"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="284dp"
                            android:layout_height="53dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="120dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/fondo_nuevo"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <EditText
                                android:id="@+id/estatusComedor"
                                android:layout_width="268dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:ems="10"
                                android:hint="Abierto/Cerrado"
                                android:inputType="text"
                                android:textAlignment="center" />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Spinner
                        android:id="@+id/comedorMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/fondo_rosa"
                        android:drawableEnd="@drawable/ic_arrow"
                        android:gravity="center_vertical"
                        android:hint="Comedor"
                        android:padding="10dp"
                        android:text="Comedor"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="150dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/blanco_background"
                        android:elevation="36dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/comedorMenu">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="425dp"
                                android:orientation="vertical">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="428dp">

                                    <TextView
                                        android:id="@+id/textView11"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="24dp"
                                        android:layout_marginTop="16dp"
                                        android:layout_marginEnd="24dp"
                                        android:text="Menú del día"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="20sp"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <LinearLayout
                                        android:layout_width="359dp"
                                        android:layout_height="351dp"
                                        android:layout_marginStart="1dp"
                                        android:layout_marginTop="4dp"
                                        android:layout_marginEnd="1dp"
                                        android:orientation="vertical"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/textView11">

                                        <LinearLayout
                                            android:layout_width="369dp"
                                            android:layout_height="68dp"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/textView19"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="Sopa/Arroz:"
                                                android:textColor="@color/black"
                                                android:textSize="20sp" />

                                            <EditText
                                                android:id="@+id/primerTiempo"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:ems="10"
                                                android:hint="Sopa/Arroz"
                                                android:inputType="text"
                                                android:textSize="20sp" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="66dp"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/textView18"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="Plato Fuerte:"
                                                android:textColor="@color/black"
                                                android:textSize="20sp" />

                                            <EditText
                                                android:id="@+id/segundoTiempo"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:ems="10"
                                                android:hint="Plato Fuerte"
                                                android:inputType="text"
                                                android:textSize="20sp" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="64dp"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/textView12"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="Pan/Tortilla:"
                                                android:textAlignment="center"
                                                android:textColor="@color/black"
                                                android:textSize="20sp" />

                                            <EditText
                                                android:id="@+id/acompañamiento"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:ems="10"
                                                android:hint="Pan/Tortilla"
                                                android:inputType="text"
                                                android:textSize="20sp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="67dp"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/textView16"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="Agua del Día:"
                                                android:textAlignment="center"
                                                android:textColor="@color/black"
                                                android:textSize="20sp" />

                                            <EditText
                                                android:id="@+id/agua"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:ems="10"
                                                android:hint="Agua del día"
                                                android:inputType="text"
                                                android:textSize="20sp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/textView17"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="Frijoles/Salsa"
                                                android:textColor="@color/black"
                                                android:textSize="20sp" />

                                            <EditText
                                                android:id="@+id/guarnicion"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:ems="10"
                                                android:hint="Frijoles/Salsa"
                                                android:inputType="text"
                                                android:textSize="20sp" />

                                        </LinearLayout>

                                    </LinearLayout>

                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>